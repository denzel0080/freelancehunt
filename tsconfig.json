{
    "compilerOptions": {
      "target": "ESNext",
      "useDefineForClassFields": true,
      "module": "ESNext",
      "moduleResolution": "node",
      "strict": true,
      "jsx": "preserve",
      "sourceMap": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "esModuleInterop": true,
      "lib": ["ESNext", "DOM"],
      "skipLibCheck": true,
      "types": ["vite/client", "node"],
      "baseUrl": ".",
      "paths": {
        "@/*": ["./assets/*"]
      }
    },
    "include": [
      "assets/**/*.ts", 
      "assets/**/*.d.ts", 
      "assets/**/*.tsx", 
      "assets/**/*.vue"
    ],
    "exclude": ["node_modules"],
    "references": [{ "path": "./tsconfig.node.json" }]
  }